<h1>Editar Post</h1>

<%= simple_form_for @post, url: admin_post_path(@post), method: :put do |f| %>
  <div class="form-inputs">
    <div class="form-group">
      <%= f.input :title, autofocus: true, input_html: {class: 'form-control'} %>
    </div>

    <div class="form-group">
      <%= f.input :subtitle, input_html: {class: 'form-control'} %>
    </div>

    <div class="form-group">
      <%= f.input :image, as: :file %>
      <%= image_tag @post.image.url(:thumb) if @post.image.present? %>
    </div>

    <div class="form-group">
      <%= f.input :content, input_html: {class: 'form-control'} %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Editar post", class: 'btn btn-lg btn-block btn-primary' %>
  </div>
<% end %>
